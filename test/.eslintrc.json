{
  "globals": {
    "describe": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false,
    "it": false
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "should" }],
    "mocha/no-exclusive-tests": "error",
    "mocha/no-skipped-tests": "error",
    "mocha/handle-done-callback": "error"
  }
}